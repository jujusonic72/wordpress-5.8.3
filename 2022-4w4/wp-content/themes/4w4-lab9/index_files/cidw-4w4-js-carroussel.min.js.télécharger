(function(){console.log('vive le carrousel');let a=document.querySelector('.boite__carrousel'),d=document.querySelector('.boite__carrousel__ferme'),e=document.querySelector('.boite__carrousel__navigation'),b=document.querySelectorAll('.galerie img');console.log(b.length);let c=document.createElement('img');a.append(c);let f=0;for(const g of b){let d=document.createElement('button');d.dataset.index=f++,e.append(d),d.addEventListener('mousedown',function(){c.setAttribute('src',b[this.dataset.index].getAttribute('src'))}),g.addEventListener('mousedown',function(){console.log(this.tagName),a.classList.add('boite__carrousel__ouvrir'),console.log(this.getAttribute('src')),c.setAttribute('src',this.getAttribute('src'))})}d.addEventListener('mousedown',function(){a.classList.remove('boite__carrousel__ouvrir')})})()